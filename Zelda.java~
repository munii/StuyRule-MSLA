import java.util.*;
public class Zelda extends Player{
    public Link(String n, int c) {
	defense = 100.0;
	damage = 100.0;
	name = n;
        color = c;
	accuracy = 95;
	multiplier = 2.0;
	HP = 100.0;
	maxHP = 100.0;
    	if (color == 1) {
    		HP += 20.0;
    		maxHP += 20.0;
    	}
    	else if (color == 2) {
    		damage += 20.0;
    	}
    	else if (color == 3) {
    		speed += 5;
    	}
    	else {
    		defense += 20.0;
    	}
    }
}
